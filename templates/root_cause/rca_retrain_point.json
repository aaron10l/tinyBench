{
  "template_id": "rca_retrain_point_v0",
  "category": "Root Cause Analysis",
  "answer_format": "row",
  "question": "Column {OUTCOME_COL} is a model's output score over the rows in this table. Should the model be retrained? If NO, return exactly: NO. If YES, return exactly: YES, <value> where <value> is the earliest {ORDER_COL} value after which retraining is warranted (e.g. YES, 42).",

  "slots": {
    "OUTCOME_COL": {
      "type": "column",
      "source": "dataset.target",
      "kind_any_of": ["regression"],
      "dtype_any_of": ["int", "float"],
      "unique_count_min": 2
    },
    "ORDER_COL": {
      "type": "column",
      "kind_any_of": ["id_no"],
      "dtype_any_of": ["int", "float"],
      "unique_count_min": 2
    },
    "SPECIFIC_ROW_ID": {
      "type": "int",
      "source": "column_values",
      "source_column": "ORDER_COL",
      "position": "random"
    }
  },

  "feature_pool": {
    "exclude_target": true,
    "exclude_kinds": ["id_no"],
    "exclude_dtypes": ["empty"]
  },

  "phenomena": [
    {
      "injector": "changepoint_injection",
      "param_mapping": {
        "pred_col": "{OUTCOME_COL}",
        "order_col": "{ORDER_COL}",
        "specific_row_id": "{SPECIFIC_ROW_ID}"
      }
    }
  ],

  "requirements": [
    {
      "type": "min_feature_count",
      "min": 5
    },
    {
      "type": "min_count_by_dtype",
      "dtype": "int",
      "min": 1
    }
  ]
}