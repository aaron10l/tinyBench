{
  "template_id": "fi_leakage_topk_v0",
  "category": "Feature Attribution / Importance",
  "answer_format": "feature_ranked_list",
  "question": "Which columns have the highest absolute Pearson correlation with {OUTCOME_COL}? Return up to {K} feature names, ranked from highest to lowest correlation, as a comma-separated list (e.g. col_a, col_b, col_c).",

  "slots": {
    "OUTCOME_COL": {
      "type": "column",
      "source": "dataset.target",
      "kind_any_of": ["regression", "binary", "categorical"]
    },
    "K": {
      "type": "int",
      "default": 5,
      "min": 1,
      "max": 10
    }
  },

  "feature_pool": {
    "exclude_kinds": ["id_no"],
    "exclude_target": true
  },

  "phenomena": [
    {
      "injector": "fi_leakage_topk",
      "param_mapping": {
        "target_col": "{OUTCOME_COL}"
      }
    }
  ],

  "requirements": [
    {
      "type": "min_feature_count",
      "min": 5
    }
  ]
}