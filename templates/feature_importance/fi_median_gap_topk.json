{
  "template_id": "fi_median_gap_topk_v0",
  "category": "Feature Attribution / Importance",
  "answer_format": "categorical",
  "question": "You can increase exactly one feature by +1 unit for all rows (leaving everything else unchanged). Which feature would yield the largest increase in average {OUTCOME_COL}? Return a single feature name.",

  "slots": {
    "OUTCOME_COL": {
      "type": "column",
      "source": "dataset.target",
      "kind_any_of": ["binary", "regression"],
      "dtype_any_of": ["bool", "int", "float"],
      "unique_count_min": 2
    }
  },

  "feature_pool": {
    "exclude_target": true,
    "exclude_kinds": ["id_no"],
    "exclude_dtypes": ["empty", "date", "datetime"]
  },

  "phenomena": [
    {
      "injector": "unit_scale_injection",
      "param_mapping": {
        "outcome_col": "{OUTCOME_COL}"
      }
    }
  ],

  "requirements": [
    {
      "type": "min_feature_count",
      "min": 1
    },
    {
      "type": "min_count_by_dtype_any_of",
      "dtypes": ["int", "float"],
      "min": 1
    }
  ]
}